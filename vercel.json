{
  "functions": {
    "app/api/generate/listing/route.ts": {
      "maxDuration": 30
    },
    "app/api/blog/generate/route.ts": {
      "maxDuration": 30
    },
    "app/api/digest/send/route.ts": {
      "maxDuration": 30
    },
    "app/api/stripe/webhook/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/blog/generate",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/digest/send", 
      "schedule": "0 15 * * 5"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}